<!-- Validation failure messages -->
<% if @subdimension.errors.any? %>
  <% @subdimension.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Subdimension</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_subdimension" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for dimension_id -->
      <div class="form-group">
        <label for="dimension_id" class="control-label">
          Dimension
        </label>

        <%= select_tag(:dimension_id, options_from_collection_for_select(Dimension.all, :id, :name, @subdimension.dimension_id), :class => "form-control") %>
      </div>

      <!-- Label and input for role_id -->
      <div class="form-group">
        <label for="role_id" class="control-label">
          Role
        </label>

        <%= select_tag(:role_id, options_from_collection_for_select(Role.all, :id, :name, @subdimension.role_id), :class => "form-control") %>
      </div>

      <!-- Label and input for name -->
      <div class="form-group">
        <label for="name" class="control-label">
          Name
        </label>

        <input type="text" id="name" name="name" placeholder="Name" class="form-control" value="<%= @subdimension.name %>">
      </div>

      <!-- Label and input for expectation -->
      <div class="form-group">
        <label for="expectation" class="control-label">
          Expectation
        </label>

        <input type="text" id="expectation" name="expectation" placeholder="Expectation" class="form-control" value="<%= @subdimension.expectation %>">
      </div>

      <button class="btn btn-success">
        Create Subdimension
      </button>
      or
      <a href="/subdimensions">Cancel</a>
    </form>
  </div>
</div>
