<div class="page-header">
  <h1>
    Projects
    <a href="/projects/new" class="btn btn-lg btn-success">New Project</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th>Code</th>
        <th>Start date</th>
        <th>End date</th>
        <th>Active</th>
        <th>Actions</th>
      </tr>

      <% @projects.each do |project| %>
      <tr>
        <td><%= project.name %></td>
        <td><%= project.code %></td>
        <td><%= project.start_date %></td>
        <td><%= project.end_date %></td>
        <td><%= project.active %></td>
        <td>
          <a href="/projects/<%= project.id %>" class="btn btn-primary">Show</a>
          <a href="/projects/<%= project.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_project/<%= project.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
