<div class="page-header">
  <h1>
    Staffings
    <a href="/staffings/new" class="btn btn-lg btn-success">New Staffing</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Project</th>
        <th>User</th>
        <th>Role</th>
        <th>Actions</th>
      </tr>

      <% @staffings.each do |staffing| %>
      <tr>
        <td>
          <% if staffing.project.present? %>
            <a href="/projects/<%= staffing.project.id %>">
              <%= staffing.project.name %>
            </a>
          <% end %>
        </td>
        <td>
          <% if staffing.user.present? %>
            <a href="/users/<%= staffing.user.id %>">
              <%= staffing.user.name %>
            </a>
          <% end %>
        </td>
        <td>
          <% if staffing.role.present? %>
            <a href="/roles/<%= staffing.role.id %>">
              <%= staffing.role.name %>
            </a>
          <% end %>
        </td>
        <td>
          <a href="/staffings/<%= staffing.id %>" class="btn btn-primary">Show</a>
          <a href="/staffings/<%= staffing.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_staffing/<%= staffing.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @staffings, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
