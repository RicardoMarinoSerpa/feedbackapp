<div class="page-header">
  <h1>
    Feedbacks
    <a href="/feedbacks/new" class="btn btn-lg btn-success">New Feedback</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Staffing</th>
        <th>Sender user</th>
        <th>Receiver user</th>
        <th>Subdimension</th>
        <th>Grade</th>
        <th>Comment</th>
        <th>Receiver visible</th>
        <th>Mentor visible</th>
        <th>Actions</th>
      </tr>

      <% @feedbacks.each do |feedback| %>
      <tr>
        <td>
          <% if feedback.staffing.present? %>
            <a href="/staffings/<%= feedback.staffing.id %>">
              <%= feedback.staffing.created_at %>
            </a>
          <% end %>
        </td>
        <td>
          <% if feedback.sender_user.present? %>
            <a href="/users/<%= feedback.sender_user.id %>">
              <%= feedback.sender_user.name %>
            </a>
          <% end %>
        </td>
        <td>
          <% if feedback.receiver_user.present? %>
            <a href="/users/<%= feedback.receiver_user.id %>">
              <%= feedback.receiver_user.name %>
            </a>
          <% end %>
        </td>
        <td>
          <% if feedback.subdimension.present? %>
            <a href="/subdimensions/<%= feedback.subdimension.id %>">
              <%= feedback.subdimension.name %>
            </a>
          <% end %>
        </td>
        <td><%= feedback.grade %></td>
        <td><%= feedback.comment %></td>
        <td><%= feedback.receiver_visible %></td>
        <td><%= feedback.mentor_visible %></td>
        <td>
          <a href="/feedbacks/<%= feedback.id %>" class="btn btn-primary">Show</a>
          
          <% if current_user == feedback.sender_user %>
            <a href="/feedbacks/<%= feedback.id %>/edit" class="btn btn-warning">Edit</a>
            <a href="/delete_feedback/<%= feedback.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @feedbacks, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
