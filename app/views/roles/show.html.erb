<div class="page-header">
  <h3>Role #<%= @role.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Name</dt>
      <dd><%= @role.name %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/roles" class="btn btn-primary">
        Back
      </a>
      <a href="/roles/<%= @role.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_role/<%= @role.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>

<!-- A Role has many staffings -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Staffings
      </li>

      <% @role.staffings.each do |staffing| %>
        <li class="list-group-item">
          <a href="/staffings/<%= staffing.id %>">
            <%= staffing.created_at %>
          </a>
          <div class="btn-group btn-group-xs pull-right">
            <a href="/staffings/<%= staffing.id %>" class="btn btn-primary">
              <i class="fa fa-search-plus"></i>
            </a>
            <a href="/staffings/<%= staffing.id %>/edit" class="btn btn-warning">
              <i class="fa fa-edit"></i>
            </a>
            <a href="/delete_staffing/<%= staffing.id %>" class="btn btn-danger" rel="nofollow">
              <i class="fa fa-trash-o"></i>
            </a>
          </div>
        </li>
      <% end %>

      <li class="list-group-item">
        <form action="/create_staffing" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for project_id -->
      <div class="form-group">
        <label for="project_id" class="control-label">
          Project
        </label>

        <%= select_tag(:project_id, options_from_collection_for_select(Project.all, :id, :name), :class => "form-control") %>
      </div>

      <!-- Label and input for user_id -->
      <div class="form-group">
        <label for="user_id" class="control-label">
          User
        </label>

        <%= select_tag(:user_id, options_from_collection_for_select(User.all, :id, :name), :class => "form-control") %>
      </div>

      <!-- Label and input for role_id -->
      <input type="hidden" name="role_id" value="<%= @role.id %>">

      <button class="btn btn-block btn-success">
        Create Staffing
      </button>
    </form>
      </li>
    </ul>
  </div>
</div>

<!-- A Role has many subdimensions -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Subdimensions
      </li>

      <% @role.subdimensions.each do |subdimension| %>
        <li class="list-group-item">
          <a href="/subdimensions/<%= subdimension.id %>">
            <%= subdimension.name %>
          </a>
          <div class="btn-group btn-group-xs pull-right">
            <a href="/subdimensions/<%= subdimension.id %>" class="btn btn-primary">
              <i class="fa fa-search-plus"></i>
            </a>
            <a href="/subdimensions/<%= subdimension.id %>/edit" class="btn btn-warning">
              <i class="fa fa-edit"></i>
            </a>
            <a href="/delete_subdimension/<%= subdimension.id %>" class="btn btn-danger" rel="nofollow">
              <i class="fa fa-trash-o"></i>
            </a>
          </div>
        </li>
      <% end %>

      <li class="list-group-item">
        <form action="/create_subdimension" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for dimension_id -->
      <div class="form-group">
        <label for="dimension_id" class="control-label">
          Dimension
        </label>

        <%= select_tag(:dimension_id, options_from_collection_for_select(Dimension.all, :id, :name), :class => "form-control") %>
      </div>

      <!-- Label and input for role_id -->
      <input type="hidden" name="role_id" value="<%= @role.id %>">

      <!-- Label and input for name -->
      <div class="form-group">
        <label for="name" class="control-label">
          Name
        </label>

        <input type="text" id="name" name="name" placeholder="Name" class="form-control" value="">
      </div>

      <!-- Label and input for expectation -->
      <div class="form-group">
        <label for="expectation" class="control-label">
          Expectation
        </label>

        <input type="text" id="expectation" name="expectation" placeholder="Expectation" class="form-control" value="">
      </div>

      <button class="btn btn-block btn-success">
        Create Subdimension
      </button>
    </form>
      </li>
    </ul>
  </div>
</div>

